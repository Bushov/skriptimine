#!/bin/bash

#Ludvig-Erik Lidmets, skript kujund
#Sisestatakse kujundi ridade arv ja tr체kib kujundi mis koosneb vastavast ridade arvust

echo "Sisestage ridade arv: "
read rida

for (( i = 1; i <= $rida; i++ ))      ### V채limine for loop - mitu rida peab printima

do


  		 for (( j = 1; j <= i; j++ )) ### Sisemine for loop - mitu t채rni peab printima reale

		 do

			  echo -n "* "

    done

  echo "" #### Prindib t체hja rea

done | tac
