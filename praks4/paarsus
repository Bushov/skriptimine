#!/bin/bash

#Paaris v천i paaritu arv, aga arv tuleb sisestada skripti k채ivitumisel

arv="$1"

jaak=$((arv%2))

if [ -z $arv ] ;

then

		echo "K채ivita see skript koos arvuga mille paarsust soovid kontrollida. N채iteks: ./paarsus 3"

else

	if [ $jaak -eq 0 ] ;

then

		echo "$arv on paaris"

else

		echo "$arv on paaritu"

	fi

fi
